<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style media="screen">
    .shadow {position:fixed; width:100%; height:100%; background:#000; opacity:0.3; filter:alpha(opacity:30);left:0; top: 0;}
    .mod_dialog {width:300px; height:200px; border:1px solid black; background:#fff; position:fixed; left:50%; top:50%; margin-left:-150px; margin-top:-100px}
    </style>
    <title></title>
  </head>
  <body>
    <div class="page">
      <% include components/top.inc.ejs %>
      <div class="content-wrap">
        <div>
          <form action="?" method="post" enctype="multipart/form-data">
            书名：<input type="text" name="name" /><br>
            作者：<input type="text" name="author" /><br>
            简介：<textarea name="instroduce"></textarea><br>
                                    图片：<input type="file" name="f1" /><br>
            <input type="submit" value="添加"/>
          </form>
        </div>
        <table border="1" width="100%">
          <thead>
            <tr>
              <th>ID</th>
              <th>书名</th>
              <th>作者</th>
              <th>简介</th>
              <th>图片</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0;i<banners.length;i++){ %>
            <tr>
              <td><%=banners[i].ID%></td>
              <td><%=banners[i].name%></td>
              <td><%=banners[i].author%></td>
              <td><%=banners[i].instroduce%></td>
              <td><img src="/upload/<%=banners[i].src%>" style="width: 200px;height:200px"/></td>
              <td>
                <a href="?act=mod&id=<%=banners[i].ID%>">修改</a>
                <a href="?act=del&id=<%=banners[i].ID%>" onclick="return confirm('你真的要删吗？')">删除</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% if(typeof mod_data!='undefined'){ %>
        <div class="shadow"></div>
        <div class="mod_dialog">
          <form action="?" method="post" enctype="multipart/form-data">
            <input type="hidden" name="mod_id" value="<%= mod_data.ID %>" />
                       书名：<input type="text" name="name" value="<%= mod_data.name %>" /><br>
                       作者：<input type="text" name="author" value="<%= mod_data.author %>" /><br>
                       简介：<textarea name="instroduce"><%= mod_data.instroduce %></textarea><br>
                       图片：<input type="file" name="f1" /><br>
            <input type="submit" value="修改"/>
            <a href="/admin/banners">取消修改</a>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>



